<Window x:Class="TinyneProject.Dialogs.BackgroundSelectorWindowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinyneProject.Dialogs"
        mc:Ignorable="d"
        Title="BackgroundSelectorWindowDialog" 
        
        Height="108" Width="212"
        ResizeMode="NoResize"
        WindowStyle="None"
        
        WindowStartupLocation="CenterOwner"
        
        Style="{DynamicResource TDialogStyle}">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      CornerRadius="5"
                      GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>
    
    <WrapPanel x:Name="MainPanel"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="3"/>

</Window>
